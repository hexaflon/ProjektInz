@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Przypomnij hasło";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="forgot-password" method="post">
                <h3>Nie pamiętasz hasła?</h3>
                <hr />
                <p>Wpisz swój adres e-mail poniżej, a otrzymasz możliwość zresetowania hasła przez swoją skrzynkę pocztową.</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button id="forgot-password-submit" type="submit" class="w-100 btn btn-lg btn-primary">Przypomnij hasło</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Pamiętasz hasło?</h3>
            <hr />
            <div>
                <h4>
                    Zaloguj się <a asp-page="./Login" class="link">tutaj</a>.
                </h4>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
