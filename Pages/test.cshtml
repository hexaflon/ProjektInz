@page
@model TestTest.Pages.testModel
@{
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.loginData.Username" class="control-label"></label>
                <input asp-for="@Model.loginData.Username" class="form-control" />
                <span asp-validation-for="@Model.loginData.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.loginData.Password" class="control-label"></label>
                <input asp-for="@Model.loginData.Password" class="form-control" />
                <span asp-validation-for="@Model.loginData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

