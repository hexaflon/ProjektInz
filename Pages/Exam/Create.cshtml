@page
@model ProjektInzynierski.Pages.Exam.CreateModel

@{
    ViewData["Title"] = "Utwórz test";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Utwórz test</h1>
    @{
        var idGrupy = "Grupa";
        var czyWidoczny = "Czy test ma być widoczny?";
        var dataRozpoczecia = "Data rozpoczęcia";
        var dataZakonczenia = "Data zakończenia";
        var tytul = "Tytuł testu";
        var opis = "Opis testu";
        var czasTrwania = "Czas trwania testu";
    }
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Test.IdGrupy" class="control-label">@Html.DisplayFor(model => idGrupy)</label>
                    <select asp-for="Test.IdGrupy" class="form-control" asp-items="ViewBag.IdGrupy"></select>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Test.CzyWidoczny" /> @Html.DisplayFor(model => czyWidoczny)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Test.DataRozpoczecia" class="control-label">@Html.DisplayFor(model => dataRozpoczecia)</label>
                    <input asp-for="Test.DataRozpoczecia" class="form-control" />
                    <span asp-validation-for="Test.DataRozpoczecia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Test.DataZakonczenia" class="control-label">@Html.DisplayFor(model => dataZakonczenia)</label>
                    <input asp-for="Test.DataZakonczenia" class="form-control" />
                    <span asp-validation-for="Test.DataZakonczenia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Test.Tytul" class="control-label">@Html.DisplayFor(model => tytul)</label>
                    <input asp-for="Test.Tytul" class="form-control" />
                    <span asp-validation-for="Test.Tytul" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Test.Opis" class="control-label">@Html.DisplayFor(model => opis)</label>
                    <input asp-for="Test.Opis" class="form-control" />
                    <span asp-validation-for="Test.Opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Test.CzasTrwania" class="control-label">@Html.DisplayFor(model => czasTrwania)</label>
                    <input asp-for="Test.CzasTrwania" class="form-control" />
                    <span asp-validation-for="Test.CzasTrwania" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-create" />
                    <a class="btn btn-back ml-2" asp-page="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
