@page
@model ProjektInzynierski.Pages.Exam.ExamInfoModel

@{
    ViewData["Title"] = "ExamInfo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>ExamInfo</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Tytul)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Tytul)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Opis)
        </dd>
        <dt class="col-sm-2">
            Liczba punktów:
        </dt>
        <dd class="col-sm-10">
            @{
                var maxPunkt = Model.Test.ListaPytan.Count();
                var liczbaPunktow = $"{Model.Rozwiazanie.LiczbaPunktow.ToString()}/{maxPunkt.ToString()} pkt.";
                Console.WriteLine(liczbaPunktow);
            }
            @Html.Raw(liczbaPunktow)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-page="/Index">Strona główna</a>
</div>
