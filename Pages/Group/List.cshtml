@page
@model ProjektInzynierski.Pages.Group.ListModel

@{
    ViewData["Title"] = "Grupy";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Grupy</h1>

    <p>
        <a class="btn btn-create" asp-page="Create">Utwórz grupę</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th class="text-muted">@Html.DisplayNameFor(model => model.Grupy.FirstOrDefault().Nazwa)</th>
                <th class="text-muted">@Html.DisplayNameFor(model => model.Grupy.FirstOrDefault().IdNauczyciela)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Grupy)
            {
                <tr class="text1">
                    <td>@Html.DisplayFor(modelItem => item.Nazwa)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNauczyciela)</td>
                    <td>
                        <a class="btn btn-edit" asp-page="./AddMembers" asp-route-id="@item.IdGrupy">Dodaj ucznia</a> |
                        <a class="btn btn-details" asp-page="./Details" asp-route-id="@item.IdGrupy">Więcej</a> |
                        <a class="btn btn-delete" asp-page="./Delete" asp-route-id="@item.IdGrupy">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
