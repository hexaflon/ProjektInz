@page
@model ProjektInzynierski.Pages.Group.CreateModel

@{
    ViewData["Title"] = "Utwórz grupę";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Utwórz grupę</h1>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Grupy.Nazwa" class="control-label">Nazwa grupy</label>
                    <input asp-for="Grupy.Nazwa" class="form-control" />
                    <span asp-validation-for="Grupy.Nazwa" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Utwórz" class="btn btn-standard" />
                    <a class="btn btn-back ml-2" asp-page="List">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
