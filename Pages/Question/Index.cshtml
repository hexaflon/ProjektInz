@page
@model TestTest.Pages.Question.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pytanie[0].Tresc)
            </th>
            <th>
                Kategoria
            </th>
            <th>
                Typ pytania
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pytanie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
