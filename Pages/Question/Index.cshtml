@page
@model TestTest.Pages.Question.IndexModel

@{
    ViewData["Title"] = "Pytania";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Pytania</h1>

    <p>
        <a class="btn btn-create" asp-page="Create">Utwórz pytanie</a>
    </p>

    @{
        var kategoriaPytania = "Kategoria pytania";
        var emailNauczyciela = "Email nauczyciela";
        var typPytania = "Typ pytania";
        var trescPytania = "Treść pytania";
    }

    <table class="table">
        <thead>
            <tr>
                <th class="text-muted">@Html.DisplayFor(model => trescPytania)</th>
                <th class="text-muted">@Html.DisplayFor(model => kategoriaPytania)</th>
                <th class="text-muted">@Html.DisplayFor(model => emailNauczyciela)</th>
                <th class="text-muted">@Html.DisplayFor(model => typPytania)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pytanie)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tresc)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdKategoriaPytaniaNavigation.Nazwa)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNauczycielaNavigation.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdTypPytaniaNavigation.Nazwa)</td>
                    <td>
                        <a class="btn btn-edit" asp-page="./Edit" asp-route-id="@item.IdPytanie">Edytuj</a> |
                        <a class="btn btn-details" asp-page="./Details" asp-route-id="@item.IdPytanie">Więcej</a> |
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.IdPytanie">Usuń</a>
                    </td>
                </tr>
                if (item.Odpowiedz != null)
                {
                    <tr>
                        <td colspan="4"><b>Odpowiedzi</b></td>
                    </tr>
                    foreach (var answer in item.Odpowiedz)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => answer.TrescOdpowiedzi)</td>
                            <td>@Html.DisplayFor(model => answer.CzyPoprawny)</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4" class="text-left">
                            <a class="btn btn-create" asp-page="/Answer/Create" asp-route-id="@item.IdPytanie">Dodaj odpowiedź</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
