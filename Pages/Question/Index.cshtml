                @Html.DisplayFor(modelItem => item.IdKategoriiNavigation.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTypPytaniaNavigation.Nazwa)
            </td>
            <td>
                <a asp-page="/Answer/CreateWithQuestionId" asp-route-id="@item.Id">Dodaj Odpowiedź</a>
