@page
@model TestTest.Pages.Question.CreateModel

@{
    ViewData["Title"] = "Utwórz pytanie";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Utwórz pytanie</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Pytanie.IdTypPytania" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.IdTypPytania)</label>
                    <select asp-for="Pytanie.IdTypPytania" class="form-control" asp-items="ViewBag.IdTypPytania"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Pytanie.IdKategoriaPytania" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.IdKategoriaPytania)</label>
                    <select asp-for="Pytanie.IdKategoriaPytania" class="form-control" asp-items="ViewBag.IdKategoriaPytania"></select>
                </div>
                <div id="trueFalseDiv" style="display:none;" class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isTrueFalse" /> Czy odpowiedź jest poprawna?
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Pytanie.Tresc" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.Tresc)</label>
                    <input asp-for="Pytanie.Tresc" class="form-control" />
                    <span asp-validation-for="Pytanie.Tresc" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Utwórz" class="btn btn-standard" />
                    <a class="btn btn-back ml-2" asp-page="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
       document.getElementById('Pytanie_IdTypPytania').addEventListener('change', function () {
           var trueFalseDiv = document.getElementById('trueFalseDiv');
           if (this.value == '@Model.IdTrueFalse') {
               trueFalseDiv.style.display = 'block';
           } else {
               trueFalseDiv.style.display = 'none';
           }
       });
   </script>
}
