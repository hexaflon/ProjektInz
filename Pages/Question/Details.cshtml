@model TestTest.Pages.Question.DetailsModel

@{
    ViewData["Title"] = "Szczegóły pytania";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="display-4">Szczegóły pytania</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pytanie.Tresc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pytanie.Tresc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pytanie.IdKategoriaPytaniaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pytanie.IdKategoriaPytaniaNavigation.IdKategoriaPytania)
