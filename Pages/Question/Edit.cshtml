@page
@model TestTest.Pages.Question.EditModel

@{
    ViewData["Title"] = "Edytuj pytanie";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="display-4">Edytuj pytanie</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Pytanie.IdPytanie" />
                <div hidden>
                    <input asp-for="Pytanie.IdNauczyciela" value="@ViewBag.IdNauczyciela" />
                </div>                
                <div class="form-group">
                    <label asp-for="Pytanie.IdKategoriaPytania" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.IdKategoriaPytania)</label>
                    <select asp-for="Pytanie.IdKategoriaPytania" class="form-control" asp-items="ViewBag.IdKategoriaPytania"></select>
                    <span asp-validation-for="Pytanie.IdKategoriaPytania" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pytanie.IdTypPytania" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.IdTypPytania)</label>
                    <select asp-for="Pytanie.IdTypPytania" class="form-control" asp-items="ViewBag.IdTypPytania"></select>
                    <span asp-validation-for="Pytanie.IdTypPytania" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pytanie.Tresc" class="control-label">@Html.DisplayNameFor(model => model.Pytanie.Tresc)</label>
                    <input asp-for="Pytanie.Tresc" class="form-control" />
                    <span asp-validation-for="Pytanie.Tresc" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Zapisz" class="btn btn-create" />
                    <a class="btn btn-back ml-2" asp-page="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
