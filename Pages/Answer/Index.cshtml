@page
@model TestTest.Pages.Answer.IndexModel

@{
    ViewData["Title"] = "Odpowiedzi";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="display-4">Odpowiedzi</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="text-muted">Treść odpowiedzi</th>
                <th class="text-muted">Poprawność odpowiedzi</th>
                <th class="text-muted">Pytanie</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Odpowiedzi)
            {
                <tr>
                    <td class ="text1">@Html.DisplayFor(modelItem => item.TrescOdpowiedzi)</td>
                    <td class="text1">@Html.DisplayFor(modelItem => item.CzyPoprawny)</td>
                    <td class="text1">@Html.DisplayFor(modelItem => item.IdPytanieNavigation.Tresc)</td>
                    <td>
                        <a class="btn btn-edit" asp-page="./Edit" asp-route-id="@item.IdOdpowiedz">Edytuj</a> |
                        <a class="btn btn-details" asp-page="./Details" asp-route-id="@item.IdOdpowiedz">Więcej</a> |
                        <a class="btn btn-delete" asp-page="./Delete" asp-route-id="@item.IdOdpowiedz">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
