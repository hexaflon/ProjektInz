@page
@model TestTest.Pages.Answer.CreateModel

@{
    ViewData["Title"] = "Utwórz odpowiedź";
}

<h1 class="display-4">Utwórz odpowiedź</h1>
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-route-id="@ViewBag.id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Odpowiedz.TrescOdpowiedzi" class="control-label">Treść odpowiedzi</label>
                    <input asp-for="Odpowiedz.TrescOdpowiedzi" class="form-control" />
                    <span asp-validation-for="Odpowiedz.TrescOdpowiedzi" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Odpowiedz.CzyPoprawny" /> Czy odpowiedź jest poprawna?
                    </label>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-create" />
                    <a class="btn btn-back ml-2" asp-page="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
