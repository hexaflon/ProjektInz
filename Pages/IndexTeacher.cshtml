@page
@model TestTest.Pages.IndexTeacherModel

@{
    ViewData["Title"] = "Strona główna";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Witaj, @User.Identity.Name!</h1>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="d-flex align-items-center justify-content-center">
                <div>
                    <button class="btn btn-big" onclick="location.href='@Url.Page("Question/Index")'">Zarządzaj pytaniami</button>
                    <button class="btn btn-big" onclick="location.href='@Url.Page("Exam/List")'">Zarządzaj testami</button>
                    <button class="btn btn-big" onclick="location.href='@Url.Page("Group/List")'">Zarządzaj grupami</button>
                </div>
            </div>
        </div>
    </div>
</div>
